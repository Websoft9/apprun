{
  "$id": "https://apprun.dev/identity.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "apprun User",
  "type": "object",
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "title": "E-Mail",
          "minLength": 3,
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": true
              }
            },
            "verification": {
              "via": "email"
            },
            "recovery": {
              "via": "email"
            }
          }
        },
        "name": {
          "type": "string",
          "title": "Full Name",
          "minLength": 2,
          "maxLength": 100
        },
        "tenant_id": {
          "type": "string",
          "format": "uuid",
          "title": "Tenant ID"
        },
        "role": {
          "type": "string",
          "enum": ["admin", "user", "viewer"],
          "default": "user",
          "title": "User Role"
        }
      },
      "required": [
        "email",
        "tenant_id"
      ],
      "additionalProperties": false
    }
  }
}
